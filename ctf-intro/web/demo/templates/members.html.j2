{% extends "layout.html.j2" %}

{% block content %}

<main class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card login-card">
        <div class="card-header">Find your friends</div>
        <div class="card-body">
          <form action="/members" method="post">
            {{ form.hidden_tag() }}
            <div class="form-group">
              {{ form.username(class="form-control") }}
              <div class="form-check form-check-inline">
                {{ form.cool(class="form-check-input", id="thisIsNotSanitized") }}
                <label class="form-check-label" for="thisIsNotSanitized">Cool people only</label>
              </div>
            </div>
            <div class="form-group">
              {{ form.submit(class="btn btn-lg btn-primary btn-block") }}  
            </div>
          </form>
          {% if not (form.answers.data == None or form.answers.data == '') %}
            {{ form.answers }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</main>
  
{% endblock %}